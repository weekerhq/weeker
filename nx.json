{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/.devcontainer/**/*",
      "{workspaceRoot}/.github/**/*",
      "{workspaceRoot}/run/**/*",
      "{workspaceRoot}/*"
    ],
    "default": [
      "sharedGlobals",
      { "dependentTasksOutputFiles": "**/*" },
      "{projectRoot}/**/*"
    ],
    "pnpm": [
      "{projectRoot}/package.json",
      "{projectRoot}/pnpm-lock.yaml",
      "{projectRoot}/pnpm-workspace.yaml",
      "{projectRoot}/.npmrc",
      { "runtime": "bash -c '[ -d '/workspaces/weeker/node_modules' ] && echo 'true' || date'" }
    ]
  },
  "targetDefaults": {
    "ci": {
      "dependsOn": ["build", "test", "pack"],
      "cache": true
    },
    "init": {
      "cache": true,
      "inputs": ["sharedGlobals", "pnpm"]
    },
    "build": {
      "dependsOn": ["init", "^build"],
      "cache": true,
      "inputs": ["default"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "dependsOn": ["init"],
      "cache": true,
      "inputs": ["default"]
    },
    "pack": {
      "dependsOn": ["init", "build"],
      "cache": true,
      "inputs": ["default"]
    },
    "publish": {
      "dependsOn": ["ci", { "projects": "weeker", "target": "auth:github" }],
      "cache": true,
      "inputs": ["default"]
    }
  }
}
